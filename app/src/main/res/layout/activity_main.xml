<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp"
        >

    <ImageView
        android:id="@+id/imageViewCandidato"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/votar"
        />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha um candidato para votar:"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10sp"
        android:textSize="18sp"
        />

    <RadioGroup
        android:id="@+id/radioGroupCandidatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:paddingTop="10sp">

    <RadioButton
        android:id="@+id/rbtMarina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marina Silva"
        />

    <RadioButton
        android:id="@+id/rbtBolsonaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jair Bolsonaro"
        />

    <RadioButton
        android:id="@+id/rbtCiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciro Gomes"
        />

    <RadioButton
        android:id="@+id/rbtDaciolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabo Daciolo"
        />

    </RadioGroup>

    <Button
        android:id="@+id/buttonVotar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Votar"/>

    <TextView
        android:id="@+id/textViewMarina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marina Silva "/>

    <TextView
        android:id="@+id/textViewBolsonaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jair Bolsonaro "/>

    <TextView
        android:id="@+id/textViewCiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciro Gomes "/>

    <TextView
        android:id="@+id/textViewDaciolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabo Daciolo "/>

</LinearLayout>